@model IEnumerable<Ext_Dynamic_Form.Models.City>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>City List</h2>
<a asp-action="Create" class="btn btn-primary mb-2">+ Add City</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>City Name</th>
            <th>State</th>
            <th>Country</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td>@city.ID</td>
                <td>@city.CityName</td>
                <td>@city.StateId</td>
                <td>@city.CountryId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@city.ID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@city.ID" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
